<%= render layout: 'shared/search_box' do %>

<div class="row">
<div class="col-sm-6">
  <div class="form-group">
    <label class="col-sm-4 control-label" for="">管理番号</label>
    <div class="col-sm-8">
      <%= f.text_field :stock_id_cont, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-4 control-label" for="">入庫日（開始日）</label>
    <div class="col-sm-8">
      <%= f.text_field :store_date_gteq, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-4 control-label" for="">入庫日（終了日）</label>
    <div class="col-sm-8">
      <%= f.text_field :store_date_lteq, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-4 control-label" for="">仕入先</label>
    <div class="col-sm-8">
      <%= f.text_field :purchase_shop_cont, class: 'form-control' %>
    </div>
  </div>
</div>

<div class="col-sm-6">
  <div class="form-group">
    <label class="col-sm-4 control-label" for="">最低仕入値</label>
    <div class="col-sm-8">
      <%= f.text_field :purchase_price_gteq, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label" for="">最高仕入値</label>
    <div class="col-sm-8">
      <%= f.text_field :purchase_price_lteq, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-4 control-label" for="">ブランド</label>
    <div class="col-sm-8">
      <%= f.text_field :brand_cont, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label" for="">製品番号</label>
    <div class="col-sm-8">
      <%= f.text_field :product_id_cont, class: 'form-control' %>
    </div>
  </div>
</div>

<div class="col-sm-12 row text-center">
  <button class="btn btn-default btn-primary" type="submit"><i class="fa fa-search"></i> 検索</button>
  <button class="btn btn-default btn-primary" type="submit" name="export_button"><i class="fa fa-search"></i> CSV出力</button>
</div>

</div>

<% end %>
