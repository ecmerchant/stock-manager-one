<div class="bg-success" style="align-items: center;">
  <h1 style="padding: 10px;">eBayリサーチツール&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<small>product by <a href="http://ec-merchant.com" target="_blank">ec-merchant.com</a></small></h1>
</div>
<h4>ログイン中：<%= @user %>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to 'ログアウト', destroy_user_session_path, method: :get %>&nbsp;&nbsp;&nbsp;<%= link_to 'トップページ', apps_show_path, method: :get %>&nbsp;&nbsp;&nbsp;<%= link_to '管理者専用', rails_admin_path, method: :get %></h4>
<br>

<ul class="nav nav-tabs" role="tablist">
  <li class="active" role="presentation">
    <a aria-controls="tab_a" data-toggle="tab" href="#tab_a" role="tab">1.検索条件の設定</a>
  </li>
  <li role="presentation">
    <a aria-controls="tab_b" data-toggle="tab" href="#tab_b" role="tab">2.検索結果の確認</a>
  </li>
</ul>
<br>
<div class="tab-content">
  <div class="tab-pane active" id="tab_a" role="tabpanel">
    <div class="row">
      <div class="col-md-12">
        <p>検索条件の基本設定</p>
      </div>
    </div>
    <%= form_for(@search, url: {action:'show'}, html:{class:'form-horizontal'} ) do |f| %>
      <div class="form-group col-md-4">
        <label class="col-md-4 control-label" for="search_condition_app_id">eBayAppID</label>
        <div class="col-md-8">
          <%= f.text_field(:app_id, class:'form-control') %>
        </div>
      </div>
      <div class="form-group col-md-4">
        <label class="col-md-4 control-label" for="search_condition_app_id">最低価格($)</label>
        <div class="col-md-8">
          <%= f.text_field(:low_price, class:'form-control') %>
        </div>
      </div>
      <div class="form-group col-md-4">
        <label class="col-md-4 control-label" for="search_condition_app_id">最高価格($)</label>
        <div class="col-md-8">
          <%= f.text_field(:high_price, class:'form-control') %>
        </div>
      </div>
      <div class="form-group col-md-4">
        <label class="col-md-4 control-label" for="search_condition_app_id">カテゴリーID</label>
        <div class="col-md-8">
          <%= f.text_field(:category_id, class:'form-control') %>
        </div>
      </div>
      <div class="form-group col-md-4">
        <label class="col-md-4 control-label" for="search_condition_app_id">商品状態</label>
        <div class="col-md-8">
          <%= f.text_field(:item_condition, class:'form-control') %>
        </div>
      </div>
      <div class="form-group col-md-4">
        <label class="col-md-4 control-label" for="search_condition_app_id">販売形式</label>
        <div class="col-md-8">
          <%= f.text_field(:sales_type, class:'form-control') %>
        </div>
      </div>
      <div class="form-group col-md-4">
        <label class="col-md-4 control-label" for="search_condition_app_id">セラーの評価</label>
        <div class="col-md-8">
          <%= f.text_field(:score, class:'form-control') %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="tab-pane" id="tab_b" role="tabpanel">
    <div class="row">
      <div class="col-md-12">
        <p>検索結果</p>
      </div>
    </div>
  </div>
</div>
